<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beauty1nside.bhf.mapper.BhfOrderMapper">
	
	<!-- 발주 요청 프로시져 호출 -->
	<insert id="orderPrd" statementType="CALLABLE">
		call order_prd(
		  #{branchOfficeId},
		  #{dueDate},
		  #{remark},
		  #{companyNum},
		  #{files, typeHandler=com.beauty1nside.bhf.OracleArrayStructHandler} 
		)
	</insert>
	
	<!-- 상품조회 -->
	<select id="goodsList" resultType="BhfGoodsOpDTO" parameterType="BhfGoodsOpDTO">
		select goods_code,
	           goods_name,
	           goods_standard
		from (select /*+INDEX_DESC(purchse_goods pk_purchse_goods)*/
					 g.rownum rn,
					 g.goods_code,
		             g.goods_name,
		             g.goods_standard
			  from   purchse_goods g
		<![CDATA[
			where rownum <= #{end}
		]]>
			and <include refid="searchInfo"></include>
			)
		<![CDATA[ where rn >= #{start} ]]>
	</select>
	
	<!-- 상품 선택시 옵션조회 -->
	<select id="optionList" resultType="BhfGoodsOpDTO">
		select g.goods_code,
		       o.option_code,
		       o.option_name
		from   purchse_goods g join purchse_option o on g.goods_num = o.goods_num
		<where>
			<include refid="searchInfo"></include>
		</where>
	</select>
	
	<select id="count" parameterType="BhfGoodsOpDTO">
		SELECT COUNT(g.goods_num)
		FROM purchse_goods g
		<where>
			<include refid="searchInfo"></include>
		</where>
	</select>
	
	<!-- 검색조건 -->
	<sql id="searchInfo">
			g.company_num = #{companyNum} 
			<if test="goodsCode != null and ! goodsCode.equals('')">
				AND g.goods_code Like '%' || #{goodsCode} || '%'
			</if>
	</sql>
	
</mapper>